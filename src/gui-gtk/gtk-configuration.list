h_include "../gui-utils/configuration-internals.h"
h_include "gtk-configuration-structures.h"
h_include "utils.h"

c_include "gtk-configuration.h"
c_include "gtk-configuration-structures.h"
c_include "gtk-games.h"
c_include "gui-back-end.h"
c_include "utils.h"


section_list  unnamed gtk_configuration_sections {
  include_list ../gui-utils/common-configuration-sections.list

  SECTION_NEW_GAME_DIALOG	"New Game Parameters"
		single
		existing	NewGameConfiguration
				new_game_configuration_dispose

		new_game_configuration
		new_game_section_values
		new_game_defaults

  + NUM_GTK_CONFIGURATION_SECTIONS
}


include_list ../gui-utils/common-configuration-values.list


values  unnamed new_game_section_values {
  NEW_GAME_DIALOG_GAME
  "Game"			game_name			string

  NEW_GAME_DIALOG_WHITE_PLAYER
  "White player name"		player_names[WHITE_INDEX]	string

  NEW_GAME_DIALOG_WHITE_IS_COMPUTER
  "White is computer"		player_is_computer[WHITE_INDEX]	boolean

  NEW_GAME_DIALOG_ENGINE_WHITE
  "Engine playing white"	engine_names[WHITE_INDEX]	string

  NEW_GAME_DIALOG_BLACK_PLAYER
  "Black player name"		player_names[BLACK_INDEX]	string

  NEW_GAME_DIALOG_BLACK_IS_COMPUTER
  "Black is computer"		player_is_computer[BLACK_INDEX]	boolean

  NEW_GAME_DIALOG_ENGINE_BLACK
  "Engine playing black"	engine_names[BLACK_INDEX]	string

  NEW_GAME_DIALOG_GO_BOARD_SIZE
  "Go board size"		go_board_size			int

  NEW_GAME_DIALOG_HANDICAP_IS_FIXED
  "Handicap is fixed"		handicap_is_fixed		boolean

  NEW_GAME_DIALOG_FIXED_HANDICAP
  "Fixed handicap"		fixed_handicap			int

  NEW_GAME_DIALOG_FREE_HANDICAP
  "Free handicap"		free_handicap			int

  NEW_GAME_DIALOG_KOMI
  "Komi"			komi				real

  NEW_GAME_DIALOG_AMAZONS_BOARD_SIZE
  "Amazons board size"		amazons_board_size		int

  NEW_GAME_DIALOG_OTHELLO_BOARD_SIZE
  "Othello board size"		othello_board_size		int
}


include_list ../gui-utils/common-configuration-defaults.list


defaults  - new_game_defaults {
  game_name				string		"Go"

  player_names[BLACK_INDEX]		string		user_real_name
  player_names[WHITE_INDEX]		string		user_real_name

  player_is_computer[BLACK_INDEX]	boolean		false
  player_is_computer[WHITE_INDEX]	boolean		false

  engine_names[BLACK_INDEX]		string		NULL
  engine_names[WHITE_INDEX]		string		NULL

  go_board_size				int		19
  amazons_board_size			int		10
  othello_board_size			int		8

  handicap_is_fixed			boolean		true
  fixed_handicap			int		0
  free_handicap				int		0

  komi					real		6.5
}
